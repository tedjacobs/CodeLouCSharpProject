@model IEnumerable<DisneyFilmList.Models.Producer>

@{
    ViewBag.Title = "Index";
}

<h2>Producer</h2>

<p>
    @Html.ActionLink("Create New Producer", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProducerID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProducerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProducerID })
            </td>
        </tr>
    }

</table>
